<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="@string/txt_result"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"
        android:padding="10dip"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txtResult" />

         <VideoView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minHeight="50px"
             android:layout_gravity="center"
 	       	android:id="@+id/vidResult"
       />


    	<ImageView
		android:src="@drawable/arrows"
		android:layout_width="200px"
		android:layout_height="100px"
        android:layout_gravity="center"
        android:padding="15dip"
		android:id="@+id/imgResult"
		android:contentDescription="@string/img_result_description"/>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

   <Button
        android:id="@+id/btnSaveResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/btn_save"
        android:textColor="@android:color/white"
        android:padding="10dip"
        android:layout_gravity="center"
        android:background="@drawable/button"/>

   <Button
        android:id="@+id/btnShareResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/btn_share"
        android:textColor="@android:color/white"
        android:padding="10dip"
        android:layout_gravity="center"
        android:background="@drawable/button"/>

   <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/btn_again"
        android:textColor="@android:color/white"
        android:padding="10dip"
        android:layout_gravity="center"
        android:background="@drawable/button"/>

   <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/btn_quit"
        android:textColor="@android:color/white"
        android:padding="10dip"
        android:layout_gravity="center"
        android:background="@drawable/button"/>
        </LinearLayout>

</LinearLayout>

