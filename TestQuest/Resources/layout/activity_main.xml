<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="10dip"
        android:text="@string/quest_title"/>

	<ImageView
		android:src="@drawable/mind"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:padding="15dip"
		android:id="@+id/imgLogo"
		android:contentDescription="@string/logo_description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dip"
        android:text="@string/quest_help01"/>

     <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nickHint"
        android:id="@+id/edtNickname" />
 

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dip"
        android:text="@string/quest_help02"/>
    
     <Spinner
        android:id="@+id/spnQuestionCount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:dropDownHorizontalOffset="40dip"
        android:prompt="@drawable/mind"/>

   <Button
        android:id="@+id/btnStartQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/btn_start_quest"
        android:padding="10dip"
        android:layout_gravity="center"
        android:background="@drawable/button"/>
    
</LinearLayout>
